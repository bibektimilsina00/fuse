{
  "id": "schedule.cron",
  "name": "Schedule Trigger",
  "version": "1.0.0",
  "author": "Fuse Official",
  "category": "triggers",
  "description": "Triggers workflows at specified intervals (seconds, minutes, hours, days)",
  "tags": [
    "schedule",
    "timer",
    "cron",
    "interval",
    "trigger"
  ],
  "icon": "clock",
  "runtime": {
    "type": "internal",
    "language": "python",
    "minPythonVersion": "3.9"
  },
  "inputs": [
    {
      "name": "frequency",
      "type": "select",
      "label": "Frequency",
      "default": "minutes",
      "required": true,
      "options": [
        {
          "label": "Seconds",
          "value": "seconds"
        },
        {
          "label": "Minutes",
          "value": "minutes"
        },
        {
          "label": "Hours",
          "value": "hours"
        },
        {
          "label": "Days",
          "value": "days"
        }
      ],
      "description": "Time unit for the interval"
    },
    {
      "name": "interval",
      "type": "number",
      "label": "Repeat Every",
      "default": 15,
      "required": true,
      "description": "How often to trigger (in the selected frequency unit)"
    },
    {
      "name": "cron_expression",
      "type": "string",
      "label": "Cron Expression (Advanced)",
      "required": false,
      "description": "Optional cron expression (overrides frequency/interval)"
    },
    {
      "name": "timezone",
      "type": "string",
      "label": "Timezone",
      "default": "UTC",
      "required": false,
      "description": "Timezone for schedule (e.g., 'America/New_York', 'UTC')"
    }
  ],
  "outputs": [
    {
      "name": "timestamp",
      "type": "string",
      "label": "Trigger Time",
      "description": "ISO 8601 timestamp when workflow was triggered"
    },
    {
      "name": "triggered_at",
      "type": "string",
      "label": "Triggered At",
      "description": "ISO 8601 timestamp"
    },
    {
      "name": "cron_expression",
      "type": "string",
      "label": "Cron Expression",
      "description": "The cron expression used"
    },
    {
      "name": "timezone",
      "type": "string",
      "label": "Timezone",
      "description": "Timezone used for scheduling"
    }
  ],
  "credentials": null,
  "trigger_group": "schedule",
  "pricing": {
    "model": "free",
    "price": 0
  },
  "visibility": "public",
  "license": "MIT"
}