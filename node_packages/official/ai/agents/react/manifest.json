{
  "id": "ai.agent",
  "name": "AI Agent",
  "version": 2,
  "nodeVersion": "1.0.0",
  "author": "Fuse Official",
  "category": "AI",
  "service": "openai",
  "connectionType": "flow",
  "description": "Autonomous AI agent that can solve tasks using tools and memory.",
  "tags": [
    "ai",
    "agent",
    "autonomous",
    "llm",
    "tools"
  ],
  "icon": "bot",
  "runtime": {
    "type": "internal",
    "language": "python",
    "minPythonVersion": "3.9"
  },
  "inputs": [
    {
      "name": "chat_model",
      "type": "ai_model",
      "label": "Chat Model",
      "required": true,
      "description": "Connect a Chat Model node here"
    },
    {
      "name": "memory",
      "type": "ai_memory",
      "label": "Memory",
      "required": false,
      "description": "Connect a Memory node (optional)"
    },
    {
      "name": "tools",
      "type": "ai_tool",
      "label": "Tools",
      "required": false,
      "description": "Connect Tool nodes (optional)"
    },
    {
      "name": "goal",
      "type": "string",
      "label": "Goal / System Prompt",
      "required": true,
      "description": "What is the agent supposed to do? (Supports templates)"
    },
    {
      "name": "input_text",
      "type": "string",
      "label": "Input Data",
      "description": "Data to process (optional, defaults to all inputs)"
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "string",
      "label": "Result",
      "description": "The final result from the agent"
    },
    {
      "name": "status",
      "type": "string",
      "label": "Status",
      "description": "'success' or 'error'"
    },
    {
      "name": "usage",
      "type": "json",
      "label": "Token Usage",
      "description": "Token usage statistics"
    }
  ],
  "credentials": null,
  "pricing": {
    "model": "free",
    "price": 0
  },
  "visibility": "public",
  "license": "MIT"
}