{
  "id": "ai.agent",
  "name": "AI Agent",
  "version": 2,
  "nodeVersion": "1.0.0",
  "author": "Fuse Official",
  "category": "AI",
  "service": "openai",
  "connectionType": "flow",
  "description": "Autonomous AI agent that can solve tasks using tools and memory.",
  "tags": [
    "ai",
    "agent",
    "autonomous",
    "llm",
    "tools"
  ],
  "icon": "bot",
  "runtime": {
    "type": "internal",
    "language": "python",
    "minPythonVersion": "3.9"
  },
  "inputs": [
    {
      "name": "prompt_source",
      "type": "select",
      "label": "Prompt Source",
      "default": "static",
      "options": [
        {
          "label": "Static Text",
          "value": "static"
        },
        {
          "label": "Dynamic Input",
          "value": "dynamic"
        }
      ],
      "description": "Where to get the goal/prompt from"
    },
    {
      "name": "goal",
      "type": "string",
      "label": "Prompt",
      "required": true,
      "description": "Static prompt/goal for the agent",
      "displayOptions": {
        "show": {
          "prompt_source": [
            "static"
          ]
        }
      }
    },
    {
      "name": "input_text",
      "type": "string",
      "label": "Input Data Map",
      "description": "Data to process (optional, defaults to all inputs)",
      "displayOptions": {
        "hide": {
          "prompt_source": [
            "dynamic"
          ]
        }
      }
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "string",
      "label": "Result",
      "description": "The final result from the agent"
    },
    {
      "name": "status",
      "type": "string",
      "label": "Status",
      "description": "'success' or 'error'"
    },
    {
      "name": "usage",
      "type": "json",
      "label": "Token Usage",
      "description": "Token usage statistics"
    }
  ],
  "credentials": null,
  "pricing": {
    "model": "free",
    "price": 0
  },
  "visibility": "public",
  "license": "MIT"
}