{
  "id": "http.request",
  "name": "HTTP Request",
  "version": "1.0.0",
  "author": "Fuse Official",
  "category": "utilities",
  "description": "Make HTTP requests to external APIs and services",
  "tags": ["http", "api", "request", "webhook"],
  "icon": "globe",
  
  "runtime": {
    "type": "internal",
    "language": "python",
    "minPythonVersion": "3.9"
  },
  
  "inputs": [
    {
      "name": "url",
      "type": "string",
      "label": "URL",
      "required": true,
      "description": "The URL to send the request to"
    },
    {
      "name": "method",
      "type": "select",
      "label": "HTTP Method",
      "default": "GET",
      "required": true,
      "options": [
        {"label": "GET", "value": "GET"},
        {"label": "POST", "value": "POST"},
        {"label": "PUT", "value": "PUT"},
        {"label": "PATCH", "value": "PATCH"},
        {"label": "DELETE", "value": "DELETE"}
      ]
    },
    {
      "name": "headers",
      "type": "json",
      "label": "Headers",
      "default": {},
      "required": false,
      "description": "HTTP headers to send"
    },
    {
      "name": "body",
      "type": "json",
      "label": "Request Body",
      "default": {},
      "required": false,
      "description": "Request body (for POST, PUT, PATCH)"
    }
  ],
  
  "outputs": [
    {
      "name": "status",
      "type": "number",
      "label": "Status Code",
      "description": "HTTP response status code"
    },
    {
      "name": "data",
      "type": "json",
      "label": "Response Data",
      "description": "Response body (parsed JSON or text)"
    },
    {
      "name": "headers",
      "type": "json",
      "label": "Response Headers",
      "description": "HTTP response headers"
    }
  ],
  
  "credentials": null,
  
  "pricing": {
    "model": "free",
    "price": 0
  },
  
  "visibility": "public",
  "license": "MIT"
}
